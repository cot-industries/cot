{
  "name": "cot",
  "version": "0.1.0",
  "private": true,
  "description": "API-first platform for building custom ERPs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "format": "biome format .",
    "check": "biome check --write .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@tailwindcss/postcss": "^4.1.16",
    "@turbo/gen": "latest",
    "turbo": "latest"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "bun": ">=1.0.0"
  }
}
